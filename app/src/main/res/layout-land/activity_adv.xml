<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpleActivity">

    <TextView
        android:id="@+id/Tekst"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginStart="364dp"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/operation"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/Tekst"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/but_return1"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:text="PowrÃ³t"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number0" />

    <Button
        android:id="@+id/number0"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="#989898"
        android:text="0"
        android:textSize="20sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number1" />

    <Button
        android:id="@+id/number9"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#989898"
        android:text="9"
        android:textSize="20sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/number8"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/number3"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#989898"
        android:text="3"
        android:textSize="20sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/number2"
        app:layout_constraintTop_toBottomOf="@+id/number6" />

    <Button
        android:id="@+id/number5"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="#989898"
        android:text="5"
        android:textSize="20sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/number4"
        app:layout_constraintTop_toBottomOf="@+id/number8" />

    <Button
        android:id="@+id/number4"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="#989898"
        android:text="4"
        android:textSize="20sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number7" />

    <Button
        android:id="@+id/number6"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="#989898"
        android:text="6"
        android:textSize="20sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/number5"
        app:layout_constraintTop_toBottomOf="@+id/number9" />

    <Button
        android:id="@+id/number7"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="#989898"
        android:text="7"
        android:textSize="20sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/number8"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="14dp"
        android:backgroundTint="#989898"
        android:text="8"
        android:textSize="20sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/number7"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dot"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="14dp"
        android:backgroundTint="#989898"
        android:text="."
        android:textSize="20sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/number0"
        app:layout_constraintTop_toBottomOf="@+id/number2" />

    <Button
        android:id="@+id/number1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="#989898"
        android:text="1"
        android:textSize="20sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number4" />

    <Button
        android:id="@+id/number2"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="14dp"
        android:backgroundTint="#989898"
        android:text="2"
        android:textSize="20sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/number1"
        app:layout_constraintTop_toBottomOf="@+id/number5" />

    <Button
        android:id="@+id/equals"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#989898"
        android:text="="
        android:textSize="20sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/dot"
        app:layout_constraintTop_toBottomOf="@+id/number3" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="79dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/number3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:id="@+id/sinus"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="#989898"
            android:text="sin"
            android:textSize="20sp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/cosinus"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:backgroundTint="#989898"
            android:text="cos"
            android:textSize="16sp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/tangens"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:backgroundTint="#989898"
            android:text="tan"
            android:textSize="16sp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/logN"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="#989898"
            android:text="ln"
            android:textSize="20sp"
            app:iconTint="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="79dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/equals"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/pierwiastek"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="#989898"
            android:text="sqrt"
            android:textSize="20sp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/square"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:backgroundTint="#989898"
            android:text="x^2"
            android:textSize="16sp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/powerN"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:backgroundTint="#989898"
            android:text="x^y"
            android:textSize="16sp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/log"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="#989898"
            android:text="log"
            android:textSize="20sp"
            app:iconTint="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="81dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/but_return1"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="#989898"
            android:text="/"
            android:textSize="20sp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:backgroundTint="#989898"
            android:text="*"
            android:textSize="20sp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/minus"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:backgroundTint="#989898"
            android:text="-"
            android:textSize="20sp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="#989898"
            android:text="+"
            android:textSize="20sp"
            app:iconTint="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/number3"
        app:layout_constraintTop_toBottomOf="@+id/Tekst">

        <Button
            android:id="@+id/backspace"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="#989898"
            android:text="Bksp"
            android:textSize="20sp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/clear"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:backgroundTint="#989898"
            android:text="C"
            android:textSize="20sp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/percent"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:backgroundTint="#989898"
            android:text="%"
            android:textSize="20sp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/change_sign"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="#989898"
            android:text="+/-"
            android:textSize="20sp"
            app:iconTint="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>